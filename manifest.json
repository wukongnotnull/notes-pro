{
  "manifest_version": 3,
  "name": "便笺 Pro",
  "version": "1.0",
  "description": "一个支持 Markdown 的类 Apple Notes 风格的笔记应用",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}